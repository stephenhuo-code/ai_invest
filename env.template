# ========================================
# 必需的环境变量配置
# ========================================

# OpenAI API 配置
OPENAI_API_KEY=sk-your-openai-api-key-here

# LangSmith 配置
LANGSMITH_API_KEY=ls-your-langsmith-api-key-here

# ========================================
# 数据库配置 (Phase 1 Architecture)
# ========================================

# 数据库连接 (开发环境使用Docker Compose中的PostgreSQL)
DATABASE_URL=postgresql+asyncpg://ai_invest:ai_invest_password@localhost:5432/ai_invest
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_invest
DATABASE_USER=ai_invest
DATABASE_PASSWORD=ai_invest_password

# 数据库连接池配置
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# ========================================
# 向量存储配置 (Phase 1: PostgreSQL + pgvector)
# ========================================

# 向量存储提供商 (postgresql | qdrant | hybrid)
VECTOR_STORAGE_PROVIDER=postgresql

# 向量配置
VECTOR_DIMENSION=1536
VECTOR_INDEX_TYPE=hnsw
VECTOR_DISTANCE_METRIC=cosine

# HNSW 索引参数
VECTOR_HNSW_M=16
VECTOR_HNSW_EF_CONSTRUCTION=64

# 向量缓存配置
VECTOR_CACHE_ENABLED=true
VECTOR_CACHE_TTL=3600
VECTOR_CACHE_MAX_SIZE=10000

# 向量批处理配置
VECTOR_BATCH_SIZE=100

# ========================================
# Phase 2 准备: Qdrant 配置 (暂时注释)
# ========================================

# Qdrant 连接配置 (Phase 2)
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
# QDRANT_COLLECTION=ai_invest_vectors
# QDRANT_API_KEY=your-qdrant-api-key
# QDRANT_ON_DISK_PAYLOAD=true
# QDRANT_TIMEOUT=30

# ========================================
# 应用配置
# ========================================

# 应用基础配置
APP_NAME=AI Invest Trend API
APP_VERSION=2.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8000

# 缓存配置
CACHE_TYPE=memory

# ========================================
# Azure 部署配置
# ========================================

AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=rg-ai-invest
CONTAINER_APP_NAME=ai-invest-app
LOCATION=eastus
ENVIRONMENT_NAME=ai-invest-env

